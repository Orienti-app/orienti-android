<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Orienti" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/Theme.Orienti.Button</item>
        <item name="buttonStyle">@style/Theme.Orienti.Button</item>
    </style>

    <style name="Theme.Orienti.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textSize">@dimen/text_size_19_sp</item>
    </style>

    <style name="Theme.Orienti.NoActionBar" parent="Theme.Orienti">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Orienti.Launcher" parent="Theme.Orienti.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_launcher_activity</item>
    </style>

    <style name="Theme.Orienti.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Orienti.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>